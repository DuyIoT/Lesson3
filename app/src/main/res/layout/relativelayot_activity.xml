<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn5"
        android:text="BUTTON 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/btn3"
        android:text="BUTTON 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="@dimen/dm20"
        android:layout_marginLeft="@dimen/dm80"/>
    <Button
        android:id="@+id/btn4"
        android:layout_marginBottom="@dimen/dm20"
        android:layout_marginRight="@dimen/dm80"
        android:text="BUTTON 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn5"
        android:layout_alignParentRight="true"/>
    <Button
        android:text="BUTTON 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn3"
        android:layout_marginBottom="@dimen/dm20"
        android:layout_marginLeft="@dimen/dm20"/>
    <Button
        android:text="BUTTON 2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn3"
        android:layout_marginBottom="@dimen/dm20"
        android:layout_marginRight="@dimen/dm20"/>

</RelativeLayout>